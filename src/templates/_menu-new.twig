{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set title = "New Menu"|t('simple-rp-menu') %}

{% set selectedTab = 'new' %}

{% set tabs = {
    menus: { label: "All Menus"|t('simple-rp-menu'), url: url('simplerpmenu/' ~ objSite.handle) },
    new:    { label: "New Menu"|t('simple-rp-menu'), url: url('simplerpmenu/menu-new/' ~ objSite.handle) }
} %}

{% set showSiteMenu = (craft.app.getIsMultiSite() ? true : false) %}
{% set urlFormat = 'simplerpmenu/menu-new/{handle}' %}
{% set selectedSiteId = objSite.id %}

{% block contextMenu %}
    {% if showSiteMenu %}
        {% include "_elements/sitemenu" %}
    {% endif %}
{% endblock %}

{% set content %}
    <form id="form-menu-new" method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        <input type="hidden" name="action" value="simple-rp-menu/simple-rp-menu/save-menu" />
        <input type="hidden" name="data[site_id]" value="{{objSite.id}}" />

        {% set nameValidationError = '' %}
        {% set handleValidationError = '' %}

        {% set nameValue = '' %}
        {% set handleValue = '' %}

        {% macro errorList(errors) %}
            {% if errors %}
                <ul class="errors">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endmacro %}
        
        {% from _self import errorList %}

        {% if menu is defined %}
            {% set nameValidationError = errorList(menu.getErrors('name')) %}
            {% set handleValidationError = errorList(menu.getErrors('handle')) %}

            {% if nameValidationError is not empty or handleValidationError is not empty %}
                {% set nameValue = menu.name %}
                {% set handleValue = menu.handle %}
            {% endif %}
        {% endif %}

        {{
            forms.textField({
                label: "Name"|t('simple-rp-menu'),
                id: 'name',
                name: 'data[name]',
                first: true,
                autofocus: true,
                required: true,
                value: nameValue
            })
        }}
        {{ nameValidationError }}
        {{
            forms.textField({
                label: "Handle"|t('simple-rp-menu'),
                id: 'handle',
                name: 'data[handle]',
                required: true,
                value: handleValue
            })
        }}
        {{ handleValidationError }}
        <div class="buttons">
            <div class="btngroup simplerpmenubtngroup submit first">
                <input type="submit" class="btn submit" value="{{ 'Save'|t('simple-rp-menu') }}" />
                <a class="btn back-button" href="{{url('simplerpmenu/' ~ objSite.handle)}}">{{ "Back"|t('simple-rp-menu') }}</a>
            </div>
        </div>
    </form>
{% endset %}

{% js %}
    new Craft.HandleGenerator('#name', '#handle');
{% endjs %}